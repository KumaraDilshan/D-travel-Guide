<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unregistered_login"
    android:id="@+id/login_view">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.TextInputLayout>


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/password10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/password10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_above="@+id/email_sign_in_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:layout_centerVertical="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/email_sign_in_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textStyle="bold"
        android:background="@drawable/my_button_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:state_pressed="true"/>

    <Button
        android:id="@+id/button_register"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register me"
        android:background="@drawable/my_button_bg"
        android:layout_marginTop="77dp"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/password10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_centerVertical="true"/>

    <CheckBox
        android:text="Keep me logged in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_sign_in_button"
        android:id="@+id/checkBox"
        android:textColor="@color/wallet_bright_foreground_holo_light"
        android:checked="true"
        android:textColorLink="@color/colorPrimaryDark" />

</RelativeLayout>
