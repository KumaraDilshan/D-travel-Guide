<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        android:background="#ad3737"
        android:textAlignment="center"
        app:titleTextColor="@color/cast_expanded_controller_text_color"
        android:layout_weight="1"
        app:title="Galle day 1 plan" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/plan_close_galle1"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_menu_information"
        android:layout_above="@+id/scroll_near_by"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@color/cardview_light_background"
        android:text="i" />

    <ScrollView
        android:id="@+id/scroll_near_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_near_by"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                app:srcCompat="@drawable/galle_plan_1"
                android:id="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/cardview_light_background" />

            <Button
                android:text="Distance of the journey: 10km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/button4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:clickable="false"
                android:textColor="@color/cast_expanded_controller_background_color" />

            <Button
                android:text="Number of the destinations covering: 5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:textAllCaps="false"
                android:clickable="false"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/button4"
                android:layout_alignLeft="@+id/button4"
                android:layout_alignStart="@+id/button4"
                android:layout_alignRight="@+id/button4"
                android:layout_alignEnd="@+id/button4"
                android:textColor="@color/cast_expanded_controller_background_color" />

            <Button
                android:text="Estimated time for road traveling: 35mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:textAllCaps="false"
                android:clickable="false"
                android:layout_below="@+id/button5"
                android:layout_alignLeft="@+id/button5"
                android:layout_alignStart="@+id/button5"
                android:layout_marginTop="13dp"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@+id/button5"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="13sp" />

            <TextView
                android:text="This is the best plan for day 1. All these places are located with less distance and first three destinations is very much close to other. Galle fort is one of the most important destination regarding travelling in Sri Lanka.\n\nGalle light house and Dutch church also in the Fort area and they can be covered on foot. You can spend more time in these places. Then visiting the two beaches is a good choice. The fort area is more beautiful if you visit there at evening time also. If you like to travel that way, visit to the beaches at morning time and fort area at evening.\n\nThe road distance of the plan is not a big far. So it is possible to spend considerable time at destinations.\n\nIf you wish to travel with day 2 plans also please take care on your accommodations at day 1 night. You can search and book hotels with the help of drawer menu.\n\nStart the journey early in the morning if possible and Keep in mind to consider on weather at Galle before traveling."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textColor="@color/cardview_light_background"
                android:textSize="15.5sp"
                android:layout_below="@+id/button6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
