<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal"
        android:padding="15dip">



        <!--  ListRow Left sied Thumbnail image -->


        <LinearLayout android:id="@+id/thumbnail"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip">
            <TextView
                android:id="@+id/task_image_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textColor="@color/colorAccent_toolbar"
                android:text="o"
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout android:id="@+id/centerContent_favourite"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3.76">

            <TextView
                android:id="@+id/task_name_favourite"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textColor="#8D8D8D"
                android:drawablePadding="10dp"
                android:text="Task Name here"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/task_date_favourite"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textColor="#676464"
                android:text="Task Date"
                android:typeface="sans"
                android:textSize="14sp"
                android:visibility="invisible" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>