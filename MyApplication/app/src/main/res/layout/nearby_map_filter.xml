<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //yourspinner.performClick();

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        android:background="#ad3737"
        android:textAlignment="center"
        app:title="Specify nearby destinations"
        app:titleTextColor="@color/cast_expanded_controller_text_color"
        android:layout_weight="1" />

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/nearby_filter_spinner"
        android:layout_weight="1"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/toolbar3"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="43dp" />

    <TextView
        android:text="Select the destination type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="22dp"
        android:id="@+id/textView2"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:text="Apply"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/apply_nearby_mapfilter"
        android:background="@android:color/transparent"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/button6"
        android:clickable="false"
        android:background="@android:color/darker_gray"
        android:layout_weight="0.00"
        android:layout_height="2dp"
        android:layout_alignTop="@+id/apply_nearby_mapfilter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
