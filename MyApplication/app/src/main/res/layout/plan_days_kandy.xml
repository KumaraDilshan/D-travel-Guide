<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:id="@+id/plan_days_Kandy">

    <Button
        android:text="Close"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/close_all_cities"
        android:background="@color/cardview_dark_background"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/button3"
        android:clickable="false"
        android:background="@android:color/darker_gray"
        android:layout_weight="0.00"
        android:layout_height="2dp"
        android:layout_alignTop="@+id/close_all_cities"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_plan_kandy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        android:background="#ad3737"
        android:textAlignment="center"
        app:titleTextColor="@color/cast_expanded_controller_text_color"
        android:layout_weight="1"
        app:title="Traveling plans" />

    <ScrollView
        android:id="@+id/scroll_plans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nearby_details_close_Kandy"
        android:layout_alignStart="@+id/nearby_details_close_Kandy"
        android:layout_below="@+id/toolbar_plan_kandy"
        android:layout_alignBottom="@+id/button3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_plans"
            android:weightSum="1"
            android:layout_below="@+id/toolbar_plan_kandy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Please select a day to have traveling plans for Kandy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@color/cardview_light_background"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" />

            <Button
                android:text="Day 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day1_Kandy"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <Button
                android:text="Day 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day2_Kandy"
                android:layout_alignParentTop="true"
                android:layout_marginTop="85dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <Button
                android:text="Day 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day3_Kandy"
                android:layout_alignParentTop="true"
                android:layout_marginTop="135dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <Button
                android:text="Day 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day4_Kandy"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="185dp"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <TextView
                android:text="All the defined destinations in Kandy can be covered in four days and the plans for these four days have been fixed."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textColor="@color/cardview_light_background"
                android:textSize="15.5sp"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="250dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:text="If you wish you can follow plans for each day seperately, but we strongly advice you to maintain the roots and instructions which are shown in the individual plans. It will help you to cover maximum number of places with the posible shortest path."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textColor="@color/cardview_light_background"
                android:textSize="15.5sp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="320dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:paddingBottom="10dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
