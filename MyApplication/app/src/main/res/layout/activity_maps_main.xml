<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maps_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="0">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/new2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="0">

        <android.support.v7.widget.Toolbar
            android:id="@+id/description_toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme.AppBarOverlay"
            android:background="#ad3737"
            android:textAlignment="center"
            app:title="Specified destinations"
            app:titleTextColor="@color/cast_expanded_controller_text_color" />

    </RelativeLayout>

    <fragment
        android:id="@+id/map_main"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.gerrie.myapplication.MapsActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_height="36dp"
        android:id="@+id/fit_map_main"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="313dp"
        android:text="FIT"
        android:textSize="14sp"
        android:background="@color/mdtp_line_background"
        android:layout_width="36dp" />

</FrameLayout>